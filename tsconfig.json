{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "allowJs": true,
        "checkJs": true,
        "strict": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
    },
    "exclude": [
        "./dist/**/*",
        "./tests"
    ]
}